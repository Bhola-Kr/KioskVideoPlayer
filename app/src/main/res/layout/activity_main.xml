<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    tools:context=".activity.MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/_20sdp"
            android:paddingBottom="@dimen/_50sdp">

            <ImageView
                android:id="@+id/ivSettings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="@dimen/_10sdp"
                android:padding="@dimen/_10sdp"
                android:src="@drawable/outline_settings_24"
                app:tint="@color/white_color" />

            <ImageView
                android:id="@+id/friendShip"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_100sdp"
                android:layout_marginBottom="@dimen/_20sdp"
                android:src="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/tvHints"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/_10sdp"
                android:paddingBottom="@dimen/_10sdp"
                android:text="Establish your video/images kiosk using the following simple steps."
                android:textAlignment="center"
                android:textColor="@color/gray_color" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_16sdp"
                android:paddingVertical="@dimen/_5sdp"
                android:text="Image Show Time (seconds)"
                android:textColor="@color/miniTitle"
                android:textSize="@dimen/_11sdp" />

            <EditText
                android:id="@+id/editTextImageShowTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_bg"
                android:hint="Default: 15"
                android:textColorHint="@color/grey"
                android:textColor="@color/black"
                android:inputType="numberDecimal"
                android:paddingHorizontal="@dimen/_5sdp"
                android:paddingVertical="@dimen/_8sdp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:text="Choose a folder for playing videos/images"
                android:textColor="@color/miniTitle"
                android:textSize="@dimen/_11sdp" />

            <Button
                android:id="@+id/btnDir"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_45sdp"
                android:backgroundTint="@color/red_shopping_list_title"
                android:paddingVertical="@dimen/_5sdp"
                android:text="Select Path"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvPath"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Current Path: "
                android:textColor="@color/miniTitle"
                android:textSize="@dimen/_11sdp" />

            <CheckBox
                android:id="@+id/checkBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="When the device starts, it automatically launches in kiosk mode."
                android:textColor="@color/white" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:text="Start Playing Videos/Images In Kiosk Mode"
                android:textColor="@color/miniTitle"
                android:textSize="@dimen/_11sdp" />

            <Button
                android:id="@+id/btPlayKiosk"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_45sdp"
                android:backgroundTint="@color/red_shopping_list_title"
                android:paddingVertical="@dimen/_5sdp"
                android:text="Start Kiosk Player"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <com.google.android.gms.ads.AdView
                android:id="@+id/adView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                app:adSize="BANNER"
                app:adUnitId="ca-app-pub-3230017247689957/9270174689" />

        </LinearLayout>
    </ScrollView>


</RelativeLayout>
